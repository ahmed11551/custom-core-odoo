<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Quality Control Tree View -->
    <record id="view_quality_control_tree" model="ir.ui.view">
        <field name="name">honey.quality.control.tree</field>
        <field name="model">honey.quality.control</field>
        <field name="arch" type="xml">
            <tree string="Quality Control">
                <field name="batch_id"/>
                <field name="control_date"/>
                <field name="inspector_id"/>
                <field name="result"/>
                <field name="temperature"/>
                <field name="ph_level"/>
            </tree>
        </field>
    </record>

    <!-- Quality Control Form View -->
    <record id="view_quality_control_form" model="ir.ui.view">
        <field name="name">honey.quality.control.form</field>
        <field name="model">honey.quality.control</field>
        <field name="arch" type="xml">
            <form string="Quality Control">
                <header>
                    <field name="result" widget="statusbar" statusbar_visible="passed,failed,conditional"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="batch_id"/>
                            <field name="control_date"/>
                            <field name="inspector_id"/>
                        </group>
                        <group>
                            <field name="result"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Physical Parameters" name="physical">
                            <group>
                                <group>
                                    <field name="temperature"/>
                                    <field name="humidity"/>
                                </group>
                                <group>
                                    <field name="ph_level"/>
                                    <field name="viscosity"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Visual Control" name="visual">
                            <group>
                                <field name="color_check"/>
                                <field name="clarity_check"/>
                                <field name="consistency_check"/>
                            </group>
                        </page>
                        
                        <page string="Microbiological Control" name="microbiological">
                            <group>
                                <group>
                                    <field name="bacteria_count"/>
                                    <field name="yeast_count"/>
                                </group>
                                <group>
                                    <field name="mold_count"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Notes" name="notes">
                            <field name="notes" nolabel="1"/>
                            <field name="recommendations" nolabel="1"/>
                        </page>
                        
                        <page string="Photos" name="photos">
                            <field name="photo_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="mimetype"/>
                                    <field name="file_size"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Quality Control Action -->
    <record id="action_quality_control" model="ir.actions.act_window">
        <field name="name">Quality Control</field>
        <field name="res_model">honey.quality.control</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first quality control!
            </p>
            <p>
                Quality control ensures that every batch meets our high standards.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_quality_control" 
              name="Quality Control" 
              parent="honey_production.menu_production" 
              action="action_quality_control" 
              sequence="30"/>
</odoo>