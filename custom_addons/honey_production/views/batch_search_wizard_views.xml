<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Batch Search Wizard Form View -->
    <record id="view_batch_search_wizard_form" model="ir.ui.view">
        <field name="name">honey.batch.search.wizard.form</field>
        <field name="model">honey.batch.search.wizard</field>
        <field name="arch" type="xml">
            <form string="Search Batch by Sticker Number">
                <group>
                    <field name="sticker_number" placeholder="Enter sticker number..."/>
                </group>
                <group string="Search Result" attrs="{'invisible': [('search_result', '=', False)]}">
                    <field name="search_result" widget="text" readonly="1" nolabel="1"/>
                </group>
                <footer>
                    <button name="action_search" string="Search" type="object" class="btn-primary"/>
                    <button name="action_view_batch" string="View Batch" type="object" 
                            attrs="{'invisible': [('found_batch_id', '=', False)]}" class="btn-secondary"/>
                    <button name="action_clear_search" string="Clear" type="object" class="btn-default"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Batch Search Wizard Action -->
    <record id="action_batch_search_wizard" model="ir.actions.act_window">
        <field name="name">Search Batch by Sticker</field>
        <field name="res_model">honey.batch.search.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_batch_search_wizard_form"/>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_batch_search" 
              name="Search by Sticker" 
              parent="honey_production.menu_production" 
              action="action_batch_search_wizard" 
              sequence="20"/>
</odoo>
