<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Production Batch Tree View -->
    <record id="view_production_batch_tree" model="ir.ui.view">
        <field name="name">honey.production.batch.tree</field>
        <field name="model">honey.production.batch</field>
        <field name="arch" type="xml">
            <tree string="Production Batches">
                <field name="name"/>
                <field name="production_date"/>
                <field name="honey_type"/>
                <field name="tape_roll_number"/>
                <field name="sticker_start_number"/>
                <field name="sticker_end_number"/>
                <field name="total_stickers"/>
                <field name="state"/>
                <field name="quality_status"/>
            </tree>
        </field>
    </record>

    <!-- Production Batch Form View -->
    <record id="view_production_batch_form" model="ir.ui.view">
        <field name="name">honey.production.batch.form</field>
        <field name="model">honey.production.batch</field>
        <field name="arch" type="xml">
            <form string="Production Batch">
                <header>
                    <button name="action_start_production" string="Start Production" type="object" 
                            states="planned" class="btn-primary"/>
                    <button name="action_complete_production" string="Complete Production" type="object" 
                            states="in_progress" class="btn-primary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,planned,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="production_date"/>
                            <field name="honey_type"/>
                            <field name="tape_roll_number"/>
                        </group>
                        <group>
                            <field name="sticker_start_number"/>
                            <field name="sticker_end_number"/>
                            <field name="total_stickers" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="HACCP Control" name="haccp">
                            <group>
                                <group>
                                    <field name="haccp_instructions_signed" readonly="1"/>
                                    <field name="haccp_signature_date" readonly="1"/>
                                    <field name="haccp_signed_by" readonly="1"/>
                                </group>
                                <group>
                                    <field name="haccp_signature" widget="image" readonly="1"/>
                                </group>
                            </group>
                            <div class="oe_read_only">
                                <field name="haccp_instructions_text" widget="text"/>
                            </div>
                            <button name="action_sign_haccp" string="Sign HACCP Instructions" type="object" 
                                    states="draft,planned" class="btn-primary"/>
                        </page>
                        
                        <page string="BG Instructions" name="bg">
                            <group>
                                <group>
                                    <field name="bg_instructions_signed" readonly="1"/>
                                    <field name="bg_signature_date" readonly="1"/>
                                    <field name="bg_signed_by" readonly="1"/>
                                </group>
                                <group>
                                    <field name="bg_signature" widget="image" readonly="1"/>
                                </group>
                            </group>
                            <div class="oe_read_only">
                                <field name="bg_instructions_text" widget="text"/>
                            </div>
                            <button name="action_sign_bg" string="Sign BG Instructions" type="object" 
                                    states="draft,planned" class="btn-primary"/>
                        </page>
                        
                        <page string="Employee Time" name="time">
                            <field name="employee_time_ids">
                                <tree editable="bottom">
                                    <field name="employee_id"/>
                                    <field name="login_time"/>
                                    <field name="logout_time"/>
                                    <field name="work_duration" readonly="1"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Quality Control" name="quality">
                            <field name="quality_control_ids">
                                <tree>
                                    <field name="control_date"/>
                                    <field name="inspector_id"/>
                                    <field name="result"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Materials" name="materials">
                            <field name="material_requirements_ids">
                                <tree>
                                    <field name="material_id"/>
                                    <field name="required_quantity"/>
                                    <field name="used_quantity"/>
                                    <field name="unit"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Production Batch Search View -->
    <record id="view_production_batch_search" model="ir.ui.view">
        <field name="name">honey.production.batch.search</field>
        <field name="model">honey.production.batch</field>
        <field name="arch" type="xml">
            <search string="Search Production Batches">
                <field name="name"/>
                <field name="honey_type"/>
                <field name="tape_roll_number"/>
                <field name="production_date"/>
                <filter string="This Month" name="this_month" domain="[('production_date', '>=', datetime.datetime.now().replace(day=1))]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <group expand="0" string="Group By">
                    <filter string="Production Date" name="group_date" context="{'group_by': 'production_date'}"/>
                    <filter string="Honey Type" name="group_type" context="{'group_by': 'honey_type'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Production Batch Action -->
    <record id="action_production_batch" model="ir.actions.act_window">
        <field name="name">Production Batches</field>
        <field name="res_model">honey.production.batch</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_production_batch_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first production batch!
            </p>
            <p>
                Production batches help you track honey sticks production with unique sticker numbering.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_production_batch" 
              name="Production Batches" 
              parent="honey_production.menu_production" 
              action="action_production_batch" 
              sequence="10"/>
</odoo>