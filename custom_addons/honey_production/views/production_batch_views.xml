<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_production_batch_form" model="ir.ui.view">
        <field name="name">honey.production.batch.form</field>
        <field name="model">honey.production.batch</field>
        <field name="arch" type="xml">
            <form string="Production Batch">
                <header>
                    <button name="action_plan" type="object" string="Plan" class="btn-primary" states="draft"/>
                    <button name="action_start" type="object" string="Start" class="btn-primary" states="planned"/>
                    <button name="action_complete" type="object" string="Complete" class="btn-primary" states="in_progress"/>
                    <button name="action_cancel" type="object" string="Cancel" class="btn-secondary" states="draft,planned,in_progress"/>
                    <button name="action_check_materials" type="object" string="Check Materials" class="btn-secondary"/>
                    <button name="action_create_material_requirements" type="object" string="Create Requirements" class="btn-secondary" states="draft,planned"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,planned,ready,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="honey_type"/>
                            <field name="batch_size"/>
                            <field name="quality_grade"/>
                            <field name="responsible_id"/>
                        </group>
                        <group>
                            <field name="planned_start_date"/>
                            <field name="planned_end_date"/>
                            <field name="actual_start_date" readonly="1"/>
                            <field name="actual_end_date" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="produced_quantity"/>
                            <field name="rejected_quantity"/>
                            <field name="material_availability" readonly="1"/>
                        </group>
                        <group>
                            <field name="sticker_range_start"/>
                            <field name="sticker_range_end"/>
                            <field name="display_type"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Materials" name="materials">
                            <field name="material_requirements_ids">
                                <tree>
                                    <field name="material_type"/>
                                    <field name="material_subtype"/>
                                    <field name="required_quantity"/>
                                    <field name="available_quantity"/>
                                    <field name="unit"/>
                                    <field name="status" widget="badge" decoration-success="status == 'available'" decoration-warning="status == 'shortage'" decoration-danger="status == 'unavailable'"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Time Tracking" name="time_tracking">
                            <field name="time_tracking_ids">
                                <tree>
                                    <field name="employee_id"/>
                                    <field name="activity_type"/>
                                    <field name="start_time"/>
                                    <field name="end_time"/>
                                    <field name="duration"/>
                                    <field name="quantity_produced"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Quality Control" name="quality_control">
                            <field name="quality_control_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="qc_type"/>
                                    <field name="inspector_id"/>
                                    <field name="qc_date"/>
                                    <field name="overall_result" widget="badge" decoration-success="overall_result == 'pass'" decoration-danger="overall_result == 'fail'" decoration-warning="overall_result == 'conditional'"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <group>
                                <field name="notes"/>
                                <field name="special_instructions"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_production_batch_tree" model="ir.ui.view">
        <field name="name">honey.production.batch.tree</field>
        <field name="model">honey.production.batch</field>
        <field name="arch" type="xml">
            <tree string="Production Batches">
                <field name="name"/>
                <field name="honey_type"/>
                <field name="batch_size"/>
                <field name="planned_start_date"/>
                <field name="planned_end_date"/>
                <field name="produced_quantity"/>
                <field name="material_availability" widget="badge" decoration-success="material_availability == 'available'" decoration-warning="material_availability == 'partial'" decoration-danger="material_availability == 'unavailable'"/>
                <field name="state" widget="badge" decoration-success="state == 'completed'" decoration-info="state == 'in_progress'" decoration-muted="state == 'draft'"/>
            </tree>
        </field>
    </record>

    <record id="view_production_batch_search" model="ir.ui.view">
        <field name="name">honey.production.batch.search</field>
        <field name="model">honey.production.batch</field>
        <field name="arch" type="xml">
            <search string="Search Production Batches">
                <field name="name"/>
                <field name="honey_type"/>
                <field name="responsible_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Planned" name="planned" domain="[('state', '=', 'planned')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Materials Available" name="materials_available" domain="[('material_availability', '=', 'available')]"/>
                <filter string="Materials Shortage" name="materials_shortage" domain="[('material_availability', 'in', ['partial', 'unavailable'])]"/>
                <filter string="This Week" name="this_week" domain="[('planned_start_date', '>=', datetime.datetime.now().strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Honey Type" name="group_honey_type" context="{'group_by': 'honey_type'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Responsible" name="group_responsible" context="{'group_by': 'responsible_id'}"/>
                    <filter string="Planned Start Date" name="group_start_date" context="{'group_by': 'planned_start_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_production_batch" model="ir.actions.act_window">
        <field name="name">Production Batches</field>
        <field name="res_model">honey.production.batch</field>
        <field name="view_mode">tree,form,kanban,calendar,pivot,graph</field>
        <field name="search_view_id" ref="view_production_batch_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first production batch!
            </p>
            <p>
                Production batches track the manufacturing of honey sticks from planning to completion.
            </p>
        </field>
    </record>

    <!-- Kanban view for production batches -->
    <record id="view_production_batch_kanban" model="ir.ui.view">
        <field name="name">honey.production.batch.kanban</field>
        <field name="model">honey.production.batch</field>
        <field name="arch" type="xml">
            <kanban string="Production Batches">
                <field name="name"/>
                <field name="honey_type"/>
                <field name="batch_size"/>
                <field name="planned_start_date"/>
                <field name="produced_quantity"/>
                <field name="material_availability"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="honey_type"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <span>Size: <field name="batch_size"/></span>
                                            <br/>
                                            <span>Produced: <field name="produced_quantity"/></span>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <span>Materials: <field name="material_availability"/></span>
                                            <br/>
                                            <span>Status: <field name="state"/></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
