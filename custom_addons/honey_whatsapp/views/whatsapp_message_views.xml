<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WhatsApp Message Tree View -->
    <record id="view_whatsapp_message_tree" model="ir.ui.view">
        <field name="name">honey.whatsapp.message.tree</field>
        <field name="model">honey.whatsapp.message</field>
        <field name="arch" type="xml">
            <tree string="WhatsApp Messages">
                <field name="partner_id"/>
                <field name="message_type"/>
                <field name="message_text" decoration-muted="len(message_text) > 50"/>
                <field name="message_date"/>
                <field name="status"/>
                <field name="is_auto_notification"/>
            </tree>
        </field>
    </record>

    <!-- WhatsApp Message Form View -->
    <record id="view_whatsapp_message_form" model="ir.ui.view">
        <field name="name">honey.whatsapp.message.form</field>
        <field name="model">honey.whatsapp.message</field>
        <field name="arch" type="xml">
            <form string="WhatsApp Message">
                <header>
                    <button name="action_send" string="Send" type="object" 
                            states="draft" class="btn-primary"/>
                    <button name="action_reply" string="Reply" type="object" 
                            states="sent,delivered,read" class="btn-secondary"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,sent,delivered,read"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="message_type"/>
                            <field name="phone_number" readonly="1"/>
                            <field name="whatsapp_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="sale_order_id"/>
                            <field name="shipment_id"/>
                            <field name="is_auto_notification"/>
                            <field name="notification_type"/>
                        </group>
                    </group>
                    <group>
                        <field name="message_text" nolabel="1"/>
                    </group>
                    <notebook>
                        <page string="Attachments" name="attachments">
                            <field name="attachment_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="mimetype"/>
                                    <field name="file_size"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- WhatsApp Message Search View -->
    <record id="view_whatsapp_message_search" model="ir.ui.view">
        <field name="name">honey.whatsapp.message.search</field>
        <field name="model">honey.whatsapp.message</field>
        <field name="arch" type="xml">
            <search string="Search WhatsApp Messages">
                <field name="partner_id"/>
                <field name="message_text"/>
                <field name="message_date"/>
                <filter string="Incoming" name="incoming" domain="[('message_type', '=', 'incoming')]"/>
                <filter string="Outgoing" name="outgoing" domain="[('message_type', '=', 'outgoing')]"/>
                <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Sent" name="sent" domain="[('status', '=', 'sent')]"/>
                <filter string="Delivered" name="delivered" domain="[('status', '=', 'delivered')]"/>
                <filter string="Read" name="read" domain="[('status', '=', 'read')]"/>
                <filter string="Failed" name="failed" domain="[('status', '=', 'failed')]"/>
                <filter string="Auto Notifications" name="auto" domain="[('is_auto_notification', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Message Type" name="group_type" context="{'group_by': 'message_type'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'message_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- WhatsApp Message Action -->
    <record id="action_whatsapp_message" model="ir.actions.act_window">
        <field name="name">WhatsApp Messages</field>
        <field name="res_model">honey.whatsapp.message</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_whatsapp_message_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No WhatsApp messages yet!
            </p>
            <p>
                WhatsApp messages will appear here when customers contact you or when you send notifications.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_whatsapp_messages" 
              name="WhatsApp Messages" 
              parent="honey_whatsapp.menu_whatsapp" 
              action="action_whatsapp_message" 
              sequence="10"/>

    <!-- Main WhatsApp Menu -->
    <menuitem id="menu_whatsapp" 
              name="WhatsApp" 
              parent="honey_dashboards.menu_honey_main" 
              sequence="60"/>
</odoo>
