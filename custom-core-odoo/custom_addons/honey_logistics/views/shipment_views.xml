<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_shipment_form" model="ir.ui.view">
        <field name="name">honey.shipment.form</field>
        <field name="model">honey.shipment</field>
        <field name="arch" type="xml">
            <form string="Shipment">
                <header>
                    <button name="action_generate_qr_code" type="object" string="Generate QR" class="btn-primary" states="draft,ready"/>
                    <button name="action_pack" type="object" string="Pack" class="btn-primary" states="ready"/>
                    <button name="action_ship" type="object" string="Ship" class="btn-primary" states="packed"/>
                    <button name="action_deliver" type="object" string="Deliver" class="btn-primary" states="shipped"/>
                    <button name="action_confirm_qr" type="object" string="Confirm QR" class="btn-primary" states="shipped,delivered"/>
                    <button name="action_return" type="object" string="Return" class="btn-secondary" states="shipped,delivered"/>
                    <button name="action_cancel" type="object" string="Cancel" class="btn-secondary" states="draft,ready,packed,shipped"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,ready,packed,shipped,delivered"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sale_order_id"/>
                            <field name="customer_id" readonly="1"/>
                            <field name="region_id" readonly="1"/>
                            <field name="agent_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="shipment_date"/>
                            <field name="expected_delivery_date"/>
                            <field name="actual_delivery_date" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="carrier_id"/>
                            <field name="tracking_number"/>
                            <field name="shipping_cost"/>
                        </group>
                        <group>
                            <field name="total_boxes" readonly="1"/>
                            <field name="total_sticks" readonly="1"/>
                            <field name="urgent_delivery"/>
                        </group>
                    </group>
                    <group>
                        <field name="delivery_address"/>
                        <field name="delivery_contact"/>
                        <field name="delivery_phone"/>
                    </group>
                    <notebook>
                        <page string="Packaging" name="packaging">
                            <field name="packaging_ids">
                                <tree>
                                    <field name="package_type"/>
                                    <field name="package_size"/>
                                    <field name="boxes_count"/>
                                    <field name="sticks_count"/>
                                    <field name="honey_type"/>
                                    <field name="quality_grade"/>
                                    <field name="packed" widget="boolean_toggle"/>
                                </tree>
                            </field>
                        </page>
                        <page string="QR Confirmation" name="qr_confirmation">
                            <group>
                                <group>
                                    <field name="qr_code" readonly="1"/>
                                    <field name="qr_confirmed" widget="boolean_toggle"/>
                                    <field name="qr_confirmation_date" readonly="1"/>
                                    <field name="qr_confirmed_by" readonly="1"/>
                                </group>
                                <group>
                                    <field name="qr_image" widget="image" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="KPI" name="kpi">
                            <group>
                                <group>
                                    <field name="processing_time" readonly="1"/>
                                    <field name="delivery_time" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="special_instructions"/>
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_shipment_tree" model="ir.ui.view">
        <field name="name">honey.shipment.tree</field>
        <field name="model">honey.shipment</field>
        <field name="arch" type="xml">
            <tree string="Shipments">
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="customer_id"/>
                <field name="region_id"/>
                <field name="shipment_date"/>
                <field name="expected_delivery_date"/>
                <field name="total_boxes"/>
                <field name="total_sticks"/>
                <field name="qr_confirmed" widget="boolean_toggle"/>
                <field name="state" widget="badge" decoration-success="state == 'delivered'" decoration-info="state == 'shipped'" decoration-muted="state == 'draft'"/>
            </tree>
        </field>
    </record>

    <record id="view_shipment_search" model="ir.ui.view">
        <field name="name">honey.shipment.search</field>
        <field name="model">honey.shipment</field>
        <field name="arch" type="xml">
            <search string="Search Shipments">
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="customer_id"/>
                <field name="region_id"/>
                <field name="agent_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Ready" name="ready" domain="[('state', '=', 'ready')]"/>
                <filter string="Packed" name="packed" domain="[('state', '=', 'packed')]"/>
                <filter string="Shipped" name="shipped" domain="[('state', '=', 'shipped')]"/>
                <filter string="Delivered" name="delivered" domain="[('state', '=', 'delivered')]"/>
                <filter string="QR Confirmed" name="qr_confirmed" domain="[('qr_confirmed', '=', True)]"/>
                <filter string="Urgent" name="urgent" domain="[('urgent_delivery', '=', True)]"/>
                <filter string="This Week" name="this_week" domain="[('shipment_date', '>=', datetime.datetime.now().strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Region" name="group_region" context="{'group_by': 'region_id'}"/>
                    <filter string="Agent" name="group_agent" context="{'group_by': 'agent_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Shipment Date" name="group_shipment_date" context="{'group_by': 'shipment_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_shipment" model="ir.actions.act_window">
        <field name="name">Shipments</field>
        <field name="res_model">honey.shipment</field>
        <field name="view_mode">tree,form,kanban,calendar,pivot,graph</field>
        <field name="search_view_id" ref="view_shipment_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first shipment!
            </p>
            <p>
                Shipments track the delivery of honey sticks from packaging to customer delivery.
            </p>
        </field>
    </record>

    <!-- Kanban view for shipments -->
    <record id="view_shipment_kanban" model="ir.ui.view">
        <field name="name">honey.shipment.kanban</field>
        <field name="model">honey.shipment</field>
        <field name="arch" type="xml">
            <kanban string="Shipments">
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="customer_id"/>
                <field name="region_id"/>
                <field name="shipment_date"/>
                <field name="total_boxes"/>
                <field name="total_sticks"/>
                <field name="qr_confirmed"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="customer_id"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <span>Boxes: <field name="total_boxes"/></span>
                                            <br/>
                                            <span>Sticks: <field name="total_sticks"/></span>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <span>QR: <field name="qr_confirmed"/></span>
                                            <br/>
                                            <span>Status: <field name="state"/></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
