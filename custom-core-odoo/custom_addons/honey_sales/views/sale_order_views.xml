<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend sale order form view -->
    <record id="view_sale_order_form_honey" model="ir.ui.view">
        <field name="name">sale.order.form.honey</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_confirm_qr" type="object" string="Confirm QR" class="btn-primary" states="sale,done" attrs="{'invisible': [('qr_confirmed', '=', True)]}"/>
                <button name="action_cancel_qr" type="object" string="Cancel QR" class="btn-secondary" states="sale,done" attrs="{'invisible': [('qr_confirmed', '=', False)]}"/>
                <field name="qr_confirmed" widget="statusbar" statusbar_visible="qr_confirmed"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="honey_region_id" readonly="1"/>
                <field name="honey_agent_id" readonly="1"/>
                <field name="honey_customer_type" readonly="1"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Honey Details" name="honey_details" groups="honey_participants.group_honey_user">
                    <group>
                        <group>
                            <field name="qr_confirmed"/>
                            <field name="qr_confirmation_date"/>
                            <field name="qr_confirmed_by"/>
                            <field name="delivery_status"/>
                        </group>
                        <group>
                            <field name="urgent_delivery"/>
                            <field name="total_commission"/>
                        </group>
                    </group>
                    <group>
                        <field name="special_instructions"/>
                    </group>
                    <notebook>
                        <page string="Commissions" name="commissions">
                            <field name="commission_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="agent_id"/>
                                    <field name="base_amount"/>
                                    <field name="commission_rate"/>
                                    <field name="amount"/>
                                    <field name="state"/>
                                    <field name="date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Extend sale order tree view -->
    <record id="view_sale_order_tree_honey" model="ir.ui.view">
        <field name="name">sale.order.tree.honey</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="honey_region_id" optional="show"/>
                <field name="honey_agent_id" optional="show"/>
                <field name="honey_customer_type" optional="show"/>
                <field name="qr_confirmed" widget="boolean_toggle"/>
                <field name="delivery_status" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- Search view for honey sales -->
    <record id="view_sale_order_search_honey" model="ir.ui.view">
        <field name="name">sale.order.search.honey</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_sale_orders_filter']" position="after">
                <filter string="QR Confirmed" name="qr_confirmed" domain="[('qr_confirmed', '=', True)]"/>
                <filter string="Pending QR" name="pending_qr" domain="[('qr_confirmed', '=', False), ('state', 'in', ['sale', 'done'])]"/>
                <separator/>
                <filter string="By Region" name="group_region" context="{'group_by': 'honey_region_id'}"/>
                <filter string="By Agent" name="group_agent" context="{'group_by': 'honey_agent_id'}"/>
                <filter string="By Customer Type" name="group_customer_type" context="{'group_by': 'honey_customer_type'}"/>
                <filter string="By Delivery Status" name="group_delivery_status" context="{'group_by': 'delivery_status'}"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="honey_region_id"/>
                <field name="honey_agent_id"/>
                <field name="honey_customer_type"/>
                <field name="delivery_status"/>
            </xpath>
        </field>
    </record>

    <!-- Extend sale order line form view -->
    <record id="view_sale_order_line_form_honey" model="ir.ui.view">
        <field name="name">sale.order.line.form.honey</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_sale_order_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="honey_product_type"/>
                <field name="quality_grade"/>
            </xpath>
            <xpath expr="//field[@name='price_unit']" position="after">
                <field name="batch_number"/>
                <field name="production_date"/>
                <field name="expiry_date"/>
            </xpath>
        </field>
    </record>

    <!-- Extend sale order line tree view -->
    <record id="view_sale_order_line_tree_honey" model="ir.ui.view">
        <field name="name">sale.order.line.tree.honey</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="honey_product_type" optional="show"/>
                <field name="quality_grade" optional="show"/>
                <field name="batch_number" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- Action for honey sales -->
    <record id="action_honey_sales" model="ir.actions.act_window">
        <field name="name">Honey Sales</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form,kanban,calendar,pivot,graph</field>
        <field name="search_view_id" ref="view_sale_order_search_honey"/>
        <field name="context">{'search_default_my_sale_orders_filter': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first sale order!
            </p>
            <p>
                Sales orders are automatically linked to regions and agents based on customer assignment.
            </p>
        </field>
    </record>

    <!-- Kanban view for sales orders -->
    <record id="view_sale_order_kanban_honey" model="ir.ui.view">
        <field name="name">sale.order.kanban.honey</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <kanban string="Sales Orders">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="honey_region_id"/>
                <field name="honey_agent_id"/>
                <field name="amount_total"/>
                <field name="state"/>
                <field name="qr_confirmed"/>
                <field name="delivery_status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="partner_id"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <span>Region: <field name="honey_region_id"/></span>
                                            <br/>
                                            <span>Agent: <field name="honey_agent_id"/></span>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <span>Amount: <field name="amount_total"/></span>
                                            <br/>
                                            <span>Status: <field name="state"/></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
